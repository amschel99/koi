{
    "extends": "@tsconfig/node18/tsconfig.json",
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "outDir": "dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "noImplicitAny": false
    }
  }